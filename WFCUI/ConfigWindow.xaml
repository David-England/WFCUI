<Window x:Class="WFCUI.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WFCUI"
        mc:Ignorable="d"
        Title="Config" Height="800" Width="160">
    <Grid DataContext="{Binding Source=Config}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Size" FontFamily="Lucida Console" FontSize="24"/>
        <TextBox Grid.Row="1" Text="4" DataContext="{Binding Source=Config, Path=Size}" Margin="10" FontFamily="Lucida Console" FontSize="24"/>
        <Label Grid.Row="2" Content="Height" FontFamily="Lucida Console" FontSize="24"/>
        <Label Grid.Row="4" Content="Width" FontFamily="Lucida Console" FontSize="24"/>
    </Grid>
</Window>
