<Window x:Class="WFCUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WFCUI"
        mc:Ignorable="d"
        Title="WFC" Height="240" Width="160">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <local:MagicZone Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center"></local:MagicZone>
        <Button Grid.Row="1" Name="Config" Content="Config" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Lucida Console" FontSize="16"
                Foreground="LightGray" Background="White" BorderBrush="LightGray" Click="OnClick_Config"/>
    </Grid>
    
</Window>
