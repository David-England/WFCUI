<Window x:Class="WFCUI.Display"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WFCUI"
        mc:Ignorable="d"
        Title="Display" Height="200" Width="400" Icon="duo.ico">
    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Save" FontFamily="Lucida Console" FontSize="24" Background="White" Click="Save_Click">
                <MenuItem.Icon>
                    <Image Source="save.ico"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>
    </Window.ContextMenu>
    <Grid>
        <Image Name="Output"/>
    </Grid>
</Window>
